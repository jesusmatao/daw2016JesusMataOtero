<h1>Listado de Preguntas </h1>
<p>
  Total: <%= @questions.size %>
</p>
<p>
  <%= link_to 'Nueva Pregunta',new_question_path,class: 'success button' %>
</p>
<table border="1" class="table">
  <tr>
    <th>Pregunta</th>
    <th>Respuestas</th>
    <th colspan="3">Opciones</th>
  </tr>
  <% @questions.each do |question| %>
      <tr>
        <td>
          <%= question.text %>
        </td>
      <td>
        <ul>
          <% question.choices.each do |choice| %>
              <li>
                <%= choice.text %>
                <% if choice.correct == 1%>
                (Correct)
                    <% end %>
                </li>
              <% end %>
        </ul>
      </td>
        <td>
          <%= link_to 'Mostrar',question,class: 'info button' %>
        </td>
        <td>
          <%= link_to 'Editar',edit_question_path(question),class: 'warning button' %>
        </td>
        <td>
          <%= link_to 'Eliminar',question,:confirm => 'Â¿Estas Seguro?', :method => :delete,class: 'alert button' %>
        </td>
      </tr>
      <% end %>
      </table>

<% content_for(:title) do %>
    All questions
<% end %>