<h1>Iniciar Quiz</h1>
<%= form_tag({:controller => 'quiz',:action => 'start'}) do %>
<p>
  <%= label_tag(:number,'Cuantas preguntas quiere hacer en el quiz', :id => 'question')%>
</p>
<p class="center"><%= select_tag(:number,options_for_select((1..10).map{|x|[x,x]}), :id => 'count')%> </p>
<div class="center">
  <%= submit_tag 'Iniciar!',:class => 'submit success button' %>
</div>
<% end %>
<% content_for(:title) do %>
Start Quiz
<% end %>