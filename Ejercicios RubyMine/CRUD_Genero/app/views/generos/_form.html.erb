<%= form_for :genero do |f| %>
  <% if @genero.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@genero.errors.count, 'error') %>
        Los errores son:
      </h2>
      <ul>
        <% @genero.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :nombre %><br/>
    <%= f.text_field :nombre %><br/>
  </p>
  <p>
    <%= f.label :descripcion %><br>
    <%= f.text_field :descripcion %><br/>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
